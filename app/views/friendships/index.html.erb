<h1>Listing friendships</h1>

<table>
  <tr>
    <th>First user</th>
    <th>Second user</th>
    <th>Relationship</th>
    <th>Last pre date</th>
    <th>Last invite date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friendships.each do |friendship| %>
  <tr>
    <td><%= friendship.first_user_id %></td>
    <td><%= friendship.second_user_id %></td>
    <td><%= friendship.relationship %></td>
    <td><%= friendship.last_pre_date %></td>
    <td><%= friendship.last_invite_date %></td>
    <td><%= link_to 'Show', friendship %></td>
    <td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>
    <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

